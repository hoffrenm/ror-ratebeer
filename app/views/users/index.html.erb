<h1>Users</h1>

<div id="users">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col" class="text-nowrap">Favorite beer</th>
        <th scope="col" class="text-nowrap">Favorite style</th>
        <th scope="col" class="text-nowrap">Favorite brewery</th>
        <th scope="col" class="text-nowrap">Ratings given</th>
        <th scope="col" class="text-nowrap">Average</th>
        <% if @current_user&.admin %>
          <th scope="col" class="text-nowrap"></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="text-nowrap"><%= link_to user.username, user %></td>
          <td class="text-nowrap text-right"><%= user.favorite_beer %></td>
          <td class="text-nowrap text-right"><%= user.favorite_style %></td>
          <td class="text-nowrap text-right"><%= user.favorite_brewery %></td>
          <td class="text-center"><%= user.ratings.size %></td>
          <td class="text-center"><%= round(user.average_rating) %></td>
          <td>
            <% if @current_user&.admin %>
              <% if not user.active %>
                <span class="badge bg-danger">closed</span>
              <% end %>
            <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
