<p style="color: green"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<div id="members">
  <b>Members</b>
  <ul>
    <% @beer_club.members.each do |member| %>
      <li>
        <%= link_to member.username, user_path(member) %>
      </li>
    <% end %>
  </ul>
</div>

<p>
  <% if current_user %>
    <% if current_user.clubs.include?(@beer_club) %>
      <%= form_with(url: membership_path, method: :delete) do |form| %>
        <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
        <%= form.submit "End the membership" %>
      <% end %>
    <% else %>
      <%= form_with(model: @membership) do |form| %>
        <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
        <%= form.submit "Join the beer club" %>
      <% end %>
    <% end %>
  <% end %>
</p>

<div>
  <%= link_to "Edit this beer club", edit_beer_club_path(@beer_club) if current_user %>
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <%= button_to "Destroy this beer club", @beer_club, method: :delete if current_user %>
</div>
