<div id="<%= dom_id beer %>">
  <h1><%= beer.name %></h1>

  <p>
    <strong>Style:</strong>
    <%= beer.style.name %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

  <p>
    <% if beer.ratings.empty? %>
      Beer has not yet been rated!
    <% else %>
      Beer has <%= beer.ratings.count %> <%= 'rating'.pluralize(beer.ratings.count) %> with and average of <%= beer.average_rating %>
    <% end %>
  </p>

</div>
