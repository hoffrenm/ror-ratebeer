    <%= form.label :style, style: "display: block", class: "form-label" %>
    <%= form.select :style_id, options_from_collection_for_select(@styles, :id, :name), {}, class: "form-select" %>
  </div>

  <div>
    <%= form.label :brewery_id, style: "display: block", class: "form-label" %>
    <%= form.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name), {}, class: "form-select" %>
  </div>

  <br>
  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
